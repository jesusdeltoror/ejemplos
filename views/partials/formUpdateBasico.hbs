<form action="/consultas/actualizar" method="put">
    <span class="formItem">
        <label for="nom">Nombre : </label>
        <input type="text" id="nom" name="nombre" readonly>
    </span>
    <span class="formItem">
        <label for="edad">Edad : </label>
        <input type="number" id="edad" name="edad" required min="1" max="100" step="1" pattern="^[0-9]*?">
    </span>
    <span class="formItem">
        <label for="trabajo">Trabajo : </label>
        <input type="text" id="trabajo" name="trabajo" required>
    </span>
    <span class="formItem">
        <label for="activo">Activo : </label>
        <input type="checkbox" name="activo" id="activo">
    </span>
    <span class="formItem">
        <input type="submit" value="Enviar">
    </span>
</form>